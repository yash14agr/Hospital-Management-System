<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RSY Hospital</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body >
    <h1 style="color:rgb(236, 106, 20)">STATISTICS</h1>
    <div style="display: flex; flex-direction:column" >
      <div style="display: flex; flex-direction: row;">
          <div style="width: 500px;">
              <canvas id="myChart"></canvas>
          </div>
          <div style="width: 300px;">
              <canvas id="myChart1"></canvas>
          </div>
      </div>
        <div style="display: flex; flex-direction: row;">
          <div style="width: 500px;">
            <canvas id="myChart2"></canvas>
          </div>      
        </div>
    </div>
    
      
    <script type="text/javascript">
        // --------------------------------------
        const ctx = document.getElementById('myChart');
        var arr1=<%- JSON.stringify(arr1) %>;
        var arr2=<%- JSON.stringify(arr2) %>;
        // alert("printing arr1:"+JSON.stringify( arr1 ))
        // alert("printing arr2:"+JSON.stringify( arr2 ))
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: arr1 ,
            datasets: [{
              label: 'Earnings of each Doctor',
              data: arr2 ,
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
        
        
        const ctx1 = document.getElementById('myChart1');
        var arr3=<%- JSON.stringify(arr3) %>;
        var arr4=<%- JSON.stringify(arr4) %>;
        // alert("printing arr1:"+JSON.stringify( arr3 ))
        // alert("printing arr2:"+JSON.stringify( arr4 ))
        new Chart(ctx1, {
          type: 'doughnut',
          data: {
            labels: arr3 ,
            datasets: [{
              label: 'Number of Patient suffering from given disease',
              data: arr4 ,
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });

        
        const ctx2 = document.getElementById('myChart2');
        var arr5=<%- JSON.stringify(arr5) %>;
        var arr6=<%- JSON.stringify(arr6) %>;
        // alert("printing arr1:"+JSON.stringify( arr1 ))
        // alert("printing arr2:"+JSON.stringify( arr2 ))
        new Chart(ctx2, {
          type: 'bar',
          data: {
            labels: arr5 ,
            datasets: [{
              label: 'No. of Patient  wrt age',
              data: arr6 ,
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });
        // ---------------------------------------
    </script>
    
</body>
</html>